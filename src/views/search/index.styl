.faceted-search-placeholder.with-results
	padding-top 20px
	
	.overlay
		background-color rgba(msDarkBlue, 0.3)

	.faceted-search
		min-height 300px
		padding-left 40px
		
		.text-search
			.search-input
				input
					border 1px solid msLightBlue
					border-right 0
					
				.search-icon
					background msLightBlue
					
					svg
						fill msDarkBlue
						margin-top 5px
					
		.facets-menu
			display none
			

		.facets
			ul.tabs
				list-style none
				width 100%
				
				li
					padding 4px 0
					inline-block()
					width 25%
					text-align center
					border 1px solid msBlue
					border-right 0px
					font-size 1.2em
					cursor pointer
					color msDarkBlue
						
					&:first-child
						border-top-left-radius 3px
						border-bottom-left-radius 3px
					
					&:last-child
						border-right 1px solid msBlue
						border-top-right-radius 3px
						border-bottom-right-radius 3px					
					
					&.active
						cursor default
						background msBlue
						color white

			.tab
				display none
				
				&.active
					display block
					
			.facet
				color msDarkerBlue
				margin-top 20px
				
				svg
					fill msDarkBlue
				
				header
					h3
						color msDarkerBlue
				
				.body
					margin-top 4px
					
					label
						color msDarkBlue
						
				&.range .body .slider .bar
					background rgba(msBlue, 0.3)
					
				&.list label em
					color rgba(msDarkBlue, 0.5)
