myblue = #88B1C8
myred = lighten(red, 60%)

.editcodex
	margin 40px
	font-size 0.9em
	
	button
		font-size 0.9em
		
		&.dateinfo
			font-family Helvetica, Arial, Sans-Serif
			text-shadow none
			font-weight bold
	
	#dateinfo, #layoutinfo
		position absolute
		display	none
		background-color #F9F2F2
		padding 0 12px
		border-radius 12px
		z-index 1000
		box-shadow 1px 1px 5px #AAA
		max-width 400px

		ul
			list-style none
			margin 0
			padding 0

			li
				border-bottom 1px solid #BBB

		label
			width 100px
			display inline-block
		span
			display inline-block
			vertical-align top

	button.dateinfo, button.layoutinfo
		width 18px
		height 18px
		padding 0
		margin 0 0 0 3px
		border 1px solid #BBB
		color #444
		background-color #EEE
		border-radius 10px
		font-size 0.9em
		// display inline
			

	.autosuggest, .combolist, .editablelist
		.input
			width auto

			div.caret
				right 1px

				&:after
					margin-top -3px


	div[data-tab]

		ul.collection
			display inline-block
			list-style none
			margin 0
			padding 0

			button.remove
				position absolute
				right -60px
				top 0

			li.model
				position relative

			ul.collection
				button.remove
					right -40px

		ul[data-cid]
			padding 20px 0 20px 0
			list-style none
			margin 0
			border-bottom 4px solid lighten(myblue, 80%)
			
			&:last-child
				border-bottom 0
				margin-bottom 160px

			.formpart
				display inline-block
				list-style none
				margin 0
				padding 0
				
				& > li
					margin 8px 0

			& > li, li.model
				border-bottom 1px solid #EEE
				padding 8px 0

				&:first-child
					padding-top 0

				&:last-child
					border-bottom none

			& > li

				// ul, div
				// 	display inline-block

				label
					display inline-block
					vertical-align top
					width 160px

			li
				table
					display inline-block

					label
						width auto

			div.placeholder
				display inline-block
				
		ul
			li.pagedimensions, li.layout
				label
					width auto
					margin-right 4px
				input
					margin 0 4px
				span
					margin-right 4px
				span.x
					margin 0 8px
					color gray
				span(class="is")
					margin 0 8px

			li.layout
				div.new
					label
						width 120px


	.invalid
		border 1px solid #E00000
		box-shadow 0px 0px 5px rgba(255, 0, 0, 0.5)
		color #E00000

	ul
		&.small
			label
				width 80px

		&.medium
			label
				width 120px

		&.large
			label
				width 200px



		&.quamaract
			label
				width auto

	.pagelayouts
		.canvas-placeholder
			position relative
			
			canvas
				position absolute
				margin-left 20px
			
	// #pagelayouts
	// 	h4
	// 		margin 0

	select, textarea, input
		background-color rgba(136, 177, 200, 0.1)
		border 1px solid #BBB
		box-sizing border-box
		-moz-box-sizing border-box
		-webkit-box-sizing border-box
		font-size 0.9em

		&.remark
			margin-left 24px

	select
		width 180px

	textarea
		padding-left 4px
		height 32px
		width 360px + 24px
		overflow hidden
		
	input
		padding-left 4px
		height 16px
		width 180px

		&[type="checkbox"]
			width auto
			vertical-align middle

		&.small
			width 36px

		&.large
			width 360px + 24px

		&.inline
			margin 0 6px



	// li
	// 	width 140px

	button.addform
		display block
		background-color myblue
		color white
		border-radius 4px
		border 0
		height 18px
		margin 3px 0

		&:hover
			background-color darken(myblue, 20%)

	button.remove
		background-color white
		color myred
		border-radius 4px
		border 0
		font-weight bold
		box-shadow none
		text-shadow none
		font-size 13px
		margin-top 3px

		&:hover
			color red
			
	form
		position relative
		
		#saveclosedelete
			position absolute
			right 0
			top 0
			
			button
				margin-right 20px
				
				&:last-child
					margin-right 0
					
				&.cancel, &.delete
					background none
					// border none
					box-shadow none
					text-shadow none
					color #808080
					font-size 13px
					
				&.delete:hover
					background-color red
					border-radius 3px
					box-shadow: 1px 1px 1px #365B74
					color white


