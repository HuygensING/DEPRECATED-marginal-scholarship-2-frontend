inline-block()
	display inline-block
	box-sizing border-box
	vertical-align top

select_none()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

msBlue = #8AB0C9
msLighterBlue = lighten(msBlue, 90%)
msLightBlue = lighten(msBlue, 50%)
msDarkBlue = darken(msBlue, 50%)
msDarkerBlue = darken(msBlue, 75%)

html, body
	height 100%
	font-family Arial
	font-size 14px
	
html, body, ul, ol, h1, h2, h3, h4, h5
	margin 0
	padding 0

